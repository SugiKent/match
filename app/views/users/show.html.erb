<div class="show-main">
    <%= image_tag @user.image.url if @user.image?%>

    <h2><%= @user.name %></h2>
    <li><%= @user.email %></li>
    <li><%= @user.sex %></li>
    <li><%= @user.howmuch%></li>
    <li><%= @user.introduce %></li>

    <% if @user.id == current_user.id %>
    <%= link_to "編集", edit_user_path(@user)%>
    <%= link_to "アカウント削除", user_path, method: :delete%>
    <%end%>
</div>
