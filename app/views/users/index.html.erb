
    <div class="main users-index">
        <div class="users-heding">ユーザー一覧</div>
        <div class="search">
          <%= search_form_for (@search) do |f| %><!--search_form_forはform_forのransack版
                                                  search_form_forの引数に検索オブジェクト@searchをとることで検索フォームを作れる-->
            <%= f.label :name_cont, "名前"%>
            <%= f.text_field :name_cont %>

            <%= f.label :sex, "性別" %>
            <label><%= f.radio_button :sex_matches, "男"%>男</label>
            <label><%= f.radio_button :sex_matches, "女"%>女</label>

            <%= f.label :howmuch, "年齢" %>
            <%= f.select :howmuch_matches, [["20代", "20代"], ["30代", "30代"], ["40代", "40代"], ["50代", "50代"]], :prompt =>"選択してください"%>


          <div class="action"><%= f.submit "検索" %></div>
          <%end%>
        </div>
          <div class="users">
            <% @users.each do |user| %>
              <%= image_tag user.image.url if user.image?%>
              <li><%= link_to user.name, user_path(user.id) %></li>

            <%end%>
          </div>
    </div>
